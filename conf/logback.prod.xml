<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder" />
    </appender>

    <appender name="STDOUT2" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%logger{15} - %message%n%xException{10}</pattern>
        </encoder>
    </appender>
    <logger name="play" level="INFO" />
    <logger name="application" level="INFO" />
    <logger name="com.mohiva" level="INFO" />
    <logger name="reactivemongo-akka.actor" level="WARN" />
    <logger name="reactivemongo" level="WARN" />
    <logger name="javax" level="WARN" />
    <logger name="org.quartz" level="WARN" />
    <logger name="io.netty" level="WARN" />
    <logger name="com.gargoylesoftware.htmlunit.javascript" level="OFF" />
    <logger name="controllers" level="INFO" />
    <logger name="filters.AccessLogFilter" level="DEBUG" />
    <logger name="com.digitaltangible" level="WARN" />
    <logger name="sun" level="WARN" />
    <logger name="com.amazonaws" level="WARN" />
    <logger name="services" level="INFO" />
    <logger name="utils" level="INFO" />
    <root level="DEBUG">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="STDOUT2" />
    </root>
</configuration>
