extends modalLayout.pug

block modalContent
  div#vfi-modal-change-password(modal-change-password)
    form
      h4 Old Password
      input.old(ng-model="oldPwd", placeholder='Enter your current password', type='password')
      h4 New Password
      input.new(ng-model="newPwd", placeholder='Enter your new password', type='password')
      h4 Confirm Password
      input.confirm(ng-model="confirmPwd", placeholder='Re-enter your new password', type='password')
    div.error-msg {{errorMsg}}
    div.button-wrapper
      button.cancel(ng-click="$dismiss()") Cancel
      button.save(ng-click="savePassword()") Save
      div.clearer
