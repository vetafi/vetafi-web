@import "../standards.styl"

#basic-one-button-modal
#basic-two-button-modal
  & input
    display: block
    width: 100%
    line-height: 36px
    margin-bottom: mediumSpacing
    padding-left: 12px
    border-radius: 5px
    border: 2px solid colorLightGray
    outline: none

    &:active
    &:focus
      border: 2px solid colorFocusBlue

  & .message
    margin-top: mediumSpacing
    margin-bottom: mediumSpacing

    & p
      width: 90%
      margin: 0 auto
      text-align: center

  & .button-wrapper
    text-align: center

    & button
      width: 6em
      margin: 0 mediumSpacing
      color: colorWhite

      &.continue
        background-color: colorPrimaryDarkBlue
      &.cancel
        background-color: colorLightGray
        color: colorBlack
      &.warning
        background-color: colorRed
      &.success
        background-color: colorLightGreen
