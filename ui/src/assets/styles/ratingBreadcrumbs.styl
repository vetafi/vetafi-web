@import "standards.styl"

#vfi-breadcrumbs
  background-color: colorBlack
  color: colorLightGray

  & .breadcrumbs-wrapper
    line-height: 40px
    width: maxLayoutWidthPx
    max-width: maxLayoutWidthPct
    margin: 0 auto

    & .link-wrapper
      display: inline-block

      & span
        margin-right: miniSpacing

        &.lighten
          color: colorLightGray
        &.current
          color: colorWhite
