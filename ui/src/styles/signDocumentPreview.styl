img.pdf-page
  width: 50vw

.signature::before
  content: "X"
  color: black
  position: relative
  top: 28vh
  left: 5px
  font-size: 5vh

.signature
  width: 100%
  height: 33vh
  border-bottom-style: dotted
  position: relative
  background-color: white
  cursor: default

  & canvas
    padding: 0;
    margin: auto;
    display: block;
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;

canvas.signature-canvas
  width: 100%
  height: 100%
